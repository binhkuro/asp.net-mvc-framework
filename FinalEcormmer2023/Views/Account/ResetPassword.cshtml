@model FinalEcormer2023.ViewModels.ResetPasswordViewModel
	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Reset password </h1>
					<nav class="d-flex align-items-center">
						<a asp-action="Index" asp-controller="Home">Home<span class="lnr lnr-arrow-right"></span></a>
						<a asp-action="ChangePassword" asp-controller="Account">Change Password </a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="/img/login.jpg" alt="">
						<div class="hover">
							<h4>Reset password?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of
								this is the</p>
						<a class="primary-btn" asp-action="Register" asp-controller="Account">Create an Account</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
							<p>Reset password</p>
						<form class="row login_form"  method="post" id="contactForm" novalidate="novalidate" asp-controller="Account" asp-action="ResetPassword" asp-route-statusCode="@Model.StatusCode" >
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" asp-for="Email" placeholder="Enter Email">
								<span asp-validation-for="Email" style="color :red"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" asp-for="newPassword" placeholder="Enter Password">
								<span asp-validation-for="newPassword" style="color :red"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" asp-for="ConfirmPassword" placeholder="Enter ConfirmPassword">
								<span asp-validation-for="ConfirmPassword" style="color :red"></span>
							</div>
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="primary-btn btn btn-success">Change Password</button>
							</div>
						</form>
						<h3>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</h3>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->