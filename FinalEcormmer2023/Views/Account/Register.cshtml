
@using FinalEcormer2023.ViewModels
@model RegisterViewModel

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Register</h1>
					<nav class="d-flex align-items-center">
						<a asp-action="Index" asp-controller="Home">Home<span class="lnr lnr-arrow-right"></span></a>
						<a asp-action="Register" asp-controller="Account">Register</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluiad" src="/img/login.jpg" alt="">
						<div class="hover">
							<h4>New to our website?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of
								this is the</p>
						<a class="primary-btn" asp-action="Register" asp-controller="Account">Create an Account</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<div class="text-danger">
							<p>@ViewBag.ErrorMessage</p>
						</div>
						<div class="text-success">
							<p>@ViewBag.Success</p>
						</div>
						<h3>Register</h3>
						<form class="row login_form"  method="post" id="contactForm" novalidate="novalidate" asp-controller="Account" asp-action="Register">
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" asp-for="Email" placeholder="Email">
								<span asp-validation-for="Email" style="color :red"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="text" class="form-control" asp-for="UserName" placeholder="UserName">
								<span asp-validation-for="UserName" style="color :red"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" asp-for="Password" placeholder="Password">
								<span asp-validation-for="Password" style="color :red"></span>
							</div>
							<div class="col-md-12 form-group">
								<input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
								<span asp-validation-for="ConfirmPassword" style="color :red"></span>
							</div>
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="primary-btn btn btn-success">Register</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->