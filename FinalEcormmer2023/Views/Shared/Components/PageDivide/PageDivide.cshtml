@using FinalEcormer2023.Views.Shared.Components.PageDivide
@model SPager

<div class="col-4 p-0 justify-content-end" style="display: none;">
    <form asp-controller="@Model.Controller" asp-action="@Model.Action">
        <span class="btn-group">
            <input class="form-control" type="text" name="SearchText" value="@Model.SearchText" placeholder="Search Key">
            <input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Search" />
        </span>
    </form>
</div>

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="1" asp-route-SearchText="@Model.SearchText">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@(Model.CurrentPage - 1)" asp-route-SearchText="@Model.SearchText">Previous</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@pge" asp-route-SearchText="@Model.SearchText"> @pge </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@(Model.CurrentPage + 1)" asp-route-SearchText="@Model.SearchText">Next</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-pg="@(Model.TotalPages)" asp-route-SearchText="@Model.SearchText">Last</a>
                </li>
            }
        </ul>
    }
</div>