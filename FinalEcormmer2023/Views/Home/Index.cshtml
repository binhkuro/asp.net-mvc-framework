	<!-- start product Area -->
	<section class="">
		@foreach (var category in Model.categories) {
		<div class="single-product-slider">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-6 text-center">
						<div class="section-title">
							<h1>@category.Name</h1>
						</div>
					</div>
				</div>
				<div class="row">
					@{
						var  modelProduct =  @Model.products.Where(u => u.category.Id == category.Id);
						int d = 0;
					}
					@foreach(var item in modelProduct){
						if(d > 3) {
							break;
						}
					<div class="col-lg-3 col-md-6">
						<div class="single-product">
							<img class="img-fluid" src=@item.Url alt="">
							<div class="product-details">
								<h6>@item.Name</h6>
								<div class="price">
									<h6> @item.Price VNĐ</h6>
									@* <h6 class="l-through">$210.00</h6> *@
								</div>
								<div class="prd-bottom">
									<a asp-action="Buy" asp-controller="Cart" asp-route-id="@item.Id"
										class="social-info">
										<span class="ti-bag"></span>
										<p class="hover-text">add to cart</p>
									</a>
									<a asp-controller="Home" asp-action="DETAIL" asp-route-id="@item.Id" class="social-info">
										<span class="lnr lnr-move"></span>
										<p class="hover-text">view more</p>
									</a>
								</div>
							</div>
						</div>
					</div>
					}
				</div>
				
			</div>
		</div>
		}
	</section>
